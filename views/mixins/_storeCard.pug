mixin storeCard(store ={})
     .products-grid.col-xl-9.col-lg-8.order-lg-2   
            .row
                each store in stores
                   .col-xl-4.col-sm-6
                    a(href=`store/${store.slug}`)
                        .product
                            .product-image
                                img(src=`/uploads/${store.photo || 'https://d19m59y37dris4.cloudfront.net/sell/1-3/img/product/serrah-galos-494312-unsplash.jpg'}`
                                class="img-fluid")
                        .py-2    
                            h3.h6.text-uppercase.mb-1 #{store.name} 
                            span #{store.description}
